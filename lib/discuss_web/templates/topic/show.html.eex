<h5><%= @topic.title %></h5>

<div class="input-field">
  <textarea class="materialize-text-area" id="comment" cols="30" rows="10">
  </textarea>
  <button class="btn" id="add-comment">Add Comment</button>
  <ul class="collection" id="comments"></ul>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    window.wireCommentsChannel(<%= @topic.id %>)
  })
</script>